<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.PredictionFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/prediction_report"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:alpha="0.4">

            <!-- First ImageView -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dummy_prediction_image1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Second ImageView -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dummy_prediction_image2"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Third ImageView -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dummy_prediction_image3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
